<h1> {{name}}</h1>
<br/>

<div class="row">
  <div class="span12">
    <div class="row">
      <div class="span6">
        <ul class="thumbnails unstyled item_pics">
          <li>
            <img {{bindAttr src="previewUrl"}}></img>
          </li>
        </ul>
        <br/>
        <table id="product-thumbnails">
          {{#each group in groupsOf}}
            <tr>
              {{#each product in group }}
                <td>
                  {{view Myshop.TinyPictureView contentBinding="product" srcBinding="product.smallUrl"}}
                </td>
              {{/each}}
            <tr>
          {{/each}}
        </table>
        <br/>
        <a {{action homePage href="true"}}> Continue shopping ....</a>
      </div>
      <div class="span6">
        <h2 id="product-price"> {{currency price}}</h2>
        <div id="buy" class="clear">
        <span class="cart_button">
          <input type="submit" value="Add to card" id="add-to-cart">
        </span>
        <h4 id='product-description'>Description</h4>

        <div id='product-description-content'>
          {{description}}
        </div>
      </div>
      </div>
    </div>
  </div>
</div>
